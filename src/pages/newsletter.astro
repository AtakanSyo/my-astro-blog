---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Join Our Newsletter">
  <main class="newsletter-page">
    <section class="hero">
      <h1>Stay Updated with Astrosyo</h1>
      <p>Get monthly sky guides, exclusive telescope deals, and behind-the-scenes astronomy content delivered straight to your inbox.</p>
    </section>

    <section class="form-section">
      <!-- Buttondown embed form -->
      <form
        action="https://buttondown.com/api/emails/embed-subscribe/astroyso"
        method="post"
        target="popupwindow"
        onsubmit="window.open('https://buttondown.com/astroyso', 'popupwindow')"
        class="embeddable-buttondown-form"
      >
        <label for="bd-email">Email Address</label>
        <input type="email" name="email" id="bd-email" placeholder="you@example.com" required />
        <input type="submit" value="Subscribe" />
        <p class="powered-by">
          <a href="https://buttondown.com/refer/astroyso" target="_blank">Powered by Buttondown</a>
        </p>
      </form>
    </section>
  </main>
</Layout>

<style>
:root {
  --bg-page: rgb(18, 18, 18);
  --card-bg: #1a1a1a;
  --text-color: #ffffff;
  --accent-color: #a9b4ff;   /* site accent */
  --accent-muted: #8882a5;   /* secondary accent */
  --input-bg: #141414;
  --input-border: #333;
  --button-hover: #8882a5;   /* hover tint */
}

/* Page */
.newsletter-page {
  max-width: 600px;
  margin: 0 auto;
  padding: 4rem 1rem;
  background: var(--bg-page);
  text-align: center;
  min-height: 90vh;
  color: var(--text-color);
}

/* Hero */
.hero h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  background: linear-gradient(45deg, var(--accent-color), var(--accent-muted));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.hero p {
  font-size: 1.125rem;
  color: #ccc; /* softer than pure white */
  margin-bottom: 2rem;
}

/* Card */
.form-section {
  background: linear-gradient(180deg, var(--card-bg), #141414);
  padding: 2.5rem 1.5rem;
  border-radius: 12px;
  border: 1px solid rgba(255,255,255,0.08);
  box-shadow: 0 10px 28px rgba(0,0,0,0.5), inset 0 1px 0 rgba(255,255,255,0.05);
  position: relative;
  overflow: clip;
}

/* Thin accent ribbon */
.form-section::before {
  content: "";
  position: absolute; left: 0; right: 0; top: 0; height: 4px;
  background: linear-gradient(90deg, var(--accent-color), var(--accent-muted));
  opacity: .85;
}

/* Form */
.embeddable-buttondown-form {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 1.25rem;
  max-width: 400px;
  margin: 0 auto;
}

.embeddable-buttondown-form label {
  font-weight: 600;
  color: var(--text-color);
  text-align: left;
  font-size: 1rem;
}

/* Email input */
.embeddable-buttondown-form input[type="email"] {
  padding: 0.75rem 1rem;
  border: 1.5px solid var(--input-border);
  border-radius: 8px;
  font-size: 1rem;
  background: var(--input-bg);
  color: var(--text-color);
  transition: border-color 0.25s ease, box-shadow 0.25s ease, background 0.25s ease;
}

.embeddable-buttondown-form input[type="email"]::placeholder {
  color: #9aa0a6;
}

.embeddable-buttondown-form input[type="email"]:focus {
  outline: none;
  border-color: transparent;
  box-shadow: 0 0 0 3px rgba(169, 180, 255, 0.28); /* soft blue glow */
}

/* Submit */
.embeddable-buttondown-form input[type="submit"] {
  padding: 0.75rem 1rem;
  background: var(--accent-color);
  color: #121212;            /* high contrast on accent */
  font-size: 1rem;
  font-weight: 700;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.25s ease, transform 0.15s ease, box-shadow 0.25s ease;
  box-shadow: 0 8px 22px rgba(0,0,0,0.22), inset 0 1px 0 rgba(255,255,255,0.12);
}

.embeddable-buttondown-form input[type="submit"]:hover {
  background: var(--button-hover);
  transform: translateY(-2px);
  box-shadow: 0 12px 28px rgba(0,0,0,0.28);
}

.embeddable-buttondown-form input[type="submit"]:focus-visible {
  outline: none;
  box-shadow:
    0 0 0 3px rgba(255,255,255,0.25),
    0 0 0 6px rgba(169,180,255,0.28);
}

/* Powered by */
.powered-by {
  font-size: 0.875rem;
  color: #9aa0a6;
}

.powered-by a {
  color: var(--accent-color);
  text-decoration: none;
  font-style: italic;
}

.powered-by a:hover {
  text-decoration: underline;
}

/* Mobile */
@media (max-width: 600px) {
  .hero h1 { font-size: 2rem; }
}
</style>