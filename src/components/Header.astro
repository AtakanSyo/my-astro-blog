---
interface Props {
  lang?: 'en' | 'tr';
}

import logoUrl from '../assets/images/shared/logo.svg?url';

const { lang = 'en' } = Astro.props;
const isTr = lang === 'tr';

// base prefix for URLs ('' or '/tr')
const base = isTr ? '/tr' : '';

// localized labels
