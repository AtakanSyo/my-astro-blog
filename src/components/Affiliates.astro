---
// src/components/Affiliates.astro
import { Icon } from 'astro-icon/components';

export interface Props {
  affiliate: {
    amazon?: string;
    highpointscientific?: string;
    astroshop?: string;
    // add any others…
  };
}
const { affiliate } = Astro.props as Props;

const hasAffiliate =
  affiliate.amazon ||
  affiliate.highpointscientific ||
  affiliate.astroshop;
---

{hasAffiliate && (
<section class="affiliate-section centered_flex">

  <h3 class="affiliate-section-title">Available at These Vendors</h3>

  <ul class="affiliate-vendors">

    {affiliate.amazon && (
      <li class="vendor-card">
        
        <div class="vendor-info">
          <h4 class="vendor-name">Amazon</h4>
          <span class="vendor-label">Huge marketplace</span>
          <p class="vendor-desc">Good for quick shipping & general purchases.</p>
        </div>

        <a
          href={affiliate.amazon}
          target="_blank"
          rel="noopener noreferrer"
          class="vendor-button"
        >
          Check price ↗
        </a>
      </li>
    )}

    {affiliate.highpointscientific && (
      <li class="vendor-card">
        
        <div class="vendor-info">
          <h4 class="vendor-name">HighPoint Scientific</h4>
          <span class="vendor-label">Astronomy-focused store</span>
          <p class="vendor-desc">Great customer support & expert guidance.</p>
        </div>

        <a
          href={affiliate.highpointscientific}
          target="_blank"
          rel="noopener noreferrer"
          class="vendor-button"
        >
          Check price ↗
        </a>
      </li>
    )}

    {affiliate.astroshop && (
      <li class="vendor-card">
        
        <div class="vendor-info">
          <h4 class="vendor-name">AstroShop</h4>
          <span class="vendor-label">Europe</span>
          <p class="vendor-desc">Recommended for EU customers.</p>
        </div>

        <a
          href={affiliate.astroshop}
          target="_blank"
          rel="noopener noreferrer"
          class="vendor-button"
        >
          Check price ↗
        </a>
      </li>
    )}

  </ul>

</section>
)}