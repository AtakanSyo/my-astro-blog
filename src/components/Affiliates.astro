---
// src/components/Affiliates.astro
import { Icon } from 'astro-icon/components';

export interface Props {
  affiliate: {
    amazon?: string;
    highpointscientific?: string;
    astroshop?: string;
    // add any othersâ€¦
  };
}
const { affiliate } = Astro.props as Props;

const hasAffiliate =
  affiliate.amazon ||
  affiliate.highpointscientific ||
  affiliate.astroshop;
---

{hasAffiliate && (
  <section class="affiliates centered_flex">
    <h3 class="affiliates-header">Choose a vendor</h3>
    <ul>
      {affiliate.amazon && (
        <li>
          <a class="affiliate-link" href={affiliate.amazon} target="_blank" rel="noopener noreferrer">Buy on Amazon</a>
          <p class="affiliate-caption">Recommended for lower priced general purchases.</p>
        </li>
      )}
      {affiliate.highpointscientific && (
        <li>
          <a class="affiliate-link" href={affiliate.highpointscientific} target="_blank" rel="noopener noreferrer">Buy on HighpointScientific</a>
          <p class="affiliate-caption">Recommended for all purchases.</p>
        </li>
      )}
      {affiliate.astroshop && (
        <li>
          <a class="affiliate-link" href={affiliate.astroshop} target="_blank" rel="noopener noreferrer">Buy on AstroShop</a>
          <p class="affiliate-caption">Recommended for European buyers.</p>
        </li>
      )}
    </ul>
  </section>
)}