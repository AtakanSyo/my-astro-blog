---
import Layout from './Layout.astro';
import '../styles/post.css';  // ‚Üê pulls in your global styles
const {
  title,
  description,
} = Astro.props.frontmatter;
---

<head>
  <title>{title}</title>
  <meta name="description" content={description} />
</head>

<Layout title={title}>
  <article class="post container centered_flex">
    <slot />
  </article>
</Layout>