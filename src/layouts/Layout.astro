---
import '../styles/global.css';  // ← pulls in your global styles
import '../styles/nav.css';
import '../styles/footer.css';

import { site } from '../config/site.js';
const defaultDescription = site.description;
const site_url = site.url ?? 'https://astrosyo.com';

interface Props {
  title?: string;
  description?: string;
  category?: string | string[];
  lang?: 'en' | 'tr';
  image?: string;
  ogType?: 'website' | 'article';
  noIndex?: boolean;
}

const {
  title,
  category,
  lang: frontmatterLang,
  description,
  image,
  ogType = 'website',
  noIndex = false,
} = Astro.props as Props;

import NavScript from '../components/NavScript.astro';
import SiteFooter from '../components/SiteFooter.astro';
import Header from '../components/Header.astro';

const pathname = Astro.url.pathname;

// Eğer frontmatter.lang varsa onu kullan, yoksa URL'den tahmin et
const isTrPath = pathname.startsWith('/tr');
const lang = frontmatterLang ?? (isTrPath ? 'tr' : 'en');
const isProd = import.meta.env.PROD;

const orgJsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Astrosyo",
  "url": site_url,
  "potentialAction": {
    "@type": "SearchAction",
    "target": `${site_url}/search?q={search_term_string}`,
    "query-input": "required name=search_term_string"
  }
};

function slugify(str: string) {
  return str.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9\-]/g, '');
}

const bodyClasses = [
  title ? `page-${slugify(title)}` : '',
  (() => {
    const cat = Array.isArray(category) ? category[0] : category;
    return cat ? `category-${cat.toLowerCase()}` : '';
  })(),
]
  .filter(Boolean)
  .join(' ');

// --------- CANONICAL & HREFLANG URL'LERİ ---------

// İngilizce yol: /tr/... ise /... haline çevir, değilse olduğu gibi
const enPath = isTrPath
  ? (pathname === '/tr' ? '/' : pathname.replace(/^\/tr/, '') || '/')
  : pathname;

// Türkçe yol: /tr/... ise olduğu gibi, değilse başına /tr ekle
const trPath = isTrPath
  ? pathname
  : (pathname === '/' ? '/tr' : `/tr${pathname}`);

// Tam URL'ler
const enUrl = `${site_url}${enPath}`;
const trUrl = `${site_url}${trPath}`;

// Sayfanın kendi canonical URL'i: tr sayfadaysak trUrl, yoksa enUrl
const canonicalUrl = lang === 'tr' ? trUrl : enUrl;

// Dinamik <title>
const pageTitle = title ? `${title} | Astrosyo` : 'Astrosyo';
const pageDescription = description ?? defaultDescription;

function toAbsoluteUrl(maybeUrl?: string) {
  if (!maybeUrl) return undefined;
  if (/^https?:\/\//i.test(maybeUrl)) return maybeUrl;
  const path = maybeUrl.startsWith('/') ? maybeUrl : `/${maybeUrl}`;
  return `${site_url}${path}`;
}

const ogImage = toAbsoluteUrl(image);
const ogLocale = lang === 'tr' ? 'tr_TR' : 'en_US';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={pageDescription} />

    {noIndex && <meta name="robots" content="noindex,nofollow" />}

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={site.name} />
    <meta property="og:locale" content={ogLocale} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <meta name="twitter:card" content={ogImage ? 'summary_large_image' : 'summary'} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}

    <title>{pageTitle}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Hreflang Etiketleri -->
    <link rel="alternate" href={enUrl} hreflang="en" />
    <link rel="alternate" href={trUrl} hreflang="tr" />
    <link rel="alternate" href={enUrl} hreflang="x-default" />

    <script type="application/ld+json">{JSON.stringify(orgJsonLd)}</script>

    {isProd && (
      <script
        defer
        src="https://cloud.umami.is/script.js"
        data-website-id="7f187073-b57a-4268-9c53-94c815af943f"
        data-host-url="https://cloud.umami.is"
      ></script>
    )}
    {isProd && (
      <script is:inline>
        {`(() => {
  // Avoid double-install (Astro view transitions / partial reloads, etc.)
  if (window.__umamiEngaged10Installed) return;
  window.__umamiEngaged10Installed = true;

  // Fire once after 10s of the page being open (and visible)
  setTimeout(() => {
    if (document.visibilityState !== "visible") return;
    if (window.umami?.track) {
      window.umami.track("engaged_10s");
    }
  }, 10000);
})();`}
      </script>
    )}
  </head>
  <body class={bodyClasses}>
    <Header lang={lang} currentPath={pathname} />
    <main id="main-content">
      <slot />
    </main>
    <NavScript />
    <SiteFooter lang={lang} currentPath={pathname} />
  </body>
</html>
