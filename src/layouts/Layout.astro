---
import '../styles/global.css';  // ‚Üê pulls in your global styles
import '../styles/nav.css';
import '../styles/footer.css';
import { site } from '../config/site.js';
const site_description = site.description;
const { title } = Astro.props;
import NavScript from '../components/NavScript.astro';
const orgJsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Astrosyo",
  "url": "https://astrosyo.com",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://astrosyo.com/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
}
function slugify(str: string): string {
  return str.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9\-]/g, '');
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <meta property="og:description" content={site_description} />
		<title>Astrosyo</title>
    <script type="application/ld+json" set:html={JSON.stringify(orgJsonLd)} />
<script
  defer
  src="https://cloud.umami.is/script.js"
  data-website-id="7f187073-b57a-4268-9c53-94c815af943f"
  data-host-url="https://cloud.umami.is"
></script>	</head>
	  <body class={title ? `page-${slugify(title)}` : ''}>
    <header>
      <div class="header-inner">
        <a href="/" class="logo centered_flex">
          <img src="/images/shared/logo.svg" alt={site.name} />
        </a>

        <!-- hamburger toggle -->
        <button class="nav-toggle" aria-label="Toggle menu">
          <span class="hamburger"></span>
        </button>

        <nav class="site-nav">
          <a href="/" class="nav-item">Home</a>
          <a href="/telescopes" class="nav-item">Telescopes</a>
          <a href="/authors" class="nav-item">Authors</a>
          <a href="/about" class="nav-item">About</a>
          <!-- search icon -->
          <button class="nav-search-toggle" aria-label="Open search">
            üîé
          </button>
          <!-- the search form, hidden by default -->
          <form action="/search" method="get" class="nav-search-form">
            <input
              type="search"
              name="q"
              class="nav-search-input"
              placeholder="Search‚Ä¶"
              aria-label="Search posts"
            />
            <button
              type="button"
              class="nav-search-close"
              aria-label="Close search"
            >
              ‚úï
            </button>
          </form>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <!-- footer -->
    <footer class="site-footer centered_flex">
      <p>¬© {new Date().getFullYear()} Astrosyo.</p>
    </footer>
      <NavScript />
	</body>
</html>
